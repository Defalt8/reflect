#pragma once
#ifndef REFLECT
#define REFLECT

#include <ds/tuple>

namespace reflect {

static constexpr struct Version { int major, minor, patch; } version { 0, 5, 7 };

template <typename O, typename T>
struct object_traits
{
	using object_t = O;
	using tuple_t  = T;
};

template <class C, typename T>
struct member_object_traits
{
	using class_t = C;
	using tuple_t = T;
};

namespace traits {

	template <class O> struct object;
	template <class C> struct member_object;

} // namespace traits


} // namespace reflect


#endif // REFLECT